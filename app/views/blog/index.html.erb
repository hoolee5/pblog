<h1>Blog</h1>
<div id="plans">
  <h1>Plans</h1>
  <div id="today_plans">
    <h2><span class="title">Today's Plan</span>
      <span class="action_link"><%= link_to "new", new_plan_path %></span></h2>
    <p>
    <% @today_plans.each do |p|%>
      <%=link_to "<span class=#{select_css(p)}>#{h p.content}</span>", plan_path(p) -%>
      <span class="action_link">[
        <%= link_to 'edit', edit_plan_path(p) -%> | 
        <%= link_to 'del', p, :confirm => 'Are you sure?', :method => :delete %> ]</span>
      <br /> 
    <% end %>
    </p>
  </div>
</div>
