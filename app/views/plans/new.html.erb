<h1>New plan</h1>

<% form_for(@plan) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.label :priority %>
    <%= f.select :priority, [['normal',0],['high', 1]] %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', plans_path %>
